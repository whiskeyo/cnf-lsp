{
  "name": "cnf-lsp",
  "description": "LSP for Wireshark Conformance Files",
  "author": "Tomasz Woszczynski <duchowe50k@gmail.com>",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "whiskeyo",
  "repository": {
    "type": "git",
    "url": "https://github.com/whiskeyo/cnf-lsp.git"
  },
  "categories": [],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {},
    "languages": [
      {
        "id": "cnf",
        "aliases": [
          "Wireshark Conformance File",
          "cnf"
        ],
        "extensions": [
          ".cnf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "cnf",
        "scopeName": "source.cnf",
        "path": "./syntaxes/cnf.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "lint": "npx eslint . --ext .ts",
    "lint:fix": "npx eslint . --ext .ts --fix",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check ."
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/node": "^20.5.7",
    "eslint": "^9.22.0",
    "prettier": "3.5.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "tabWidth": 2,
    "printWidth": 100
  }
}
